@model System.Data.DataTable
@{
    ViewBag.Title = "Home Page";
}
<style>
    table, th, td {
        border: 1px solid;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
   
</style>


    <table style="width: 100%" ;>

        <tr>
            <th>
                Name
            </th>
            <th>
                Department
            </th>
            <th>
                Manager
            </th>
        </tr>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
        <tr>
            <td>
               <div>@Model.Rows[i][0]</div>
            </td>
            <td>
               <div>@Model.Rows[i][1]</div>
            </td>
            <td>
                <div>@Model.Rows[i][2]</div>
            </td>
        </tr>
        }
    </table>
